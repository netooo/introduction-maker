{
  "name": "@introduction-maker/api",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "echo 'No build step required for Hono + Workers'",
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:migrate": "wrangler d1 migrations apply introduction-maker-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply introduction-maker-db",
    "db:create-local": "wrangler d1 execute introduction-maker-db --local --file=./migrations/0001_initial_tables.sql",
    "db:check": "wrangler d1 execute introduction-maker-db --local --command=\"SELECT name FROM sqlite_master WHERE type='table';\""
  },
  "dependencies": {
    "@hono/zod-validator": "^0.2.0",
    "@introduction-maker/shared": "file:../../packages/shared",
    "@prisma/adapter-d1": "^5.7.0",
    "@prisma/client": "^5.7.0",
    "hono": "^4.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.0.0",
    "@types/node": "^20.0.0",
    "prisma": "^5.7.0",
    "typescript": "^5.0.0",
    "wrangler": "^4.34.0"
  }
}
