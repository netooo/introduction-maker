{
  "name": "introduction-maker",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "next build",
    "pages:build": "npx @cloudflare/next-on-pages",
    "dev": "npm run dev --workspaces",
    "lint": "npm run lint --workspaces",
    "type-check": "npm run type-check --workspaces",
    "build:web": "npm run build --workspace=apps/web && npm run clean:cache",
    "build:api": "npm run build --workspace=apps/api",
    "clean:cache": "rm -rf apps/web/.next/cache && rm -rf apps/web/.next/standalone"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}